---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Revalidation', href: '/revalidation' },
    { linkText: 'Image CDN', href: '/image-cdn' },
    { linkText: 'Edge Function', href: '/edge' },
    { linkText: 'Blobs', href: '/blobs' }
];
---

<!-- Navigation -->
<nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <svg class="h-10 w-10 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"></path>
                    <path d="M14 17H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"></path>
                </svg>
                <span class="ml-2 text-xl font-bold text-gray-800">BrandPack</span>
            </div>
            <div class="hidden md:flex space-x-8">
                <a href="#" class="nav-link active text-gray-800 hover:text-blue-600 transition-colors" data-page="home">Home</a>
                <a href="#" class="nav-link text-gray-800 hover:text-blue-600 transition-colors" data-page="boxes">Boxes</a>
                <a href="#" class="nav-link text-gray-800 hover:text-blue-600 transition-colors" data-page="notebooks">Notebooks</a>
                <a href="#" class="nav-link text-gray-800 hover:text-blue-600 transition-colors" data-page="contact">Contact Us</a>
            </div>
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-gray-500 hover:text-blue-600 focus:outline-none">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div id="mobile-menu" class="md:hidden hidden pt-4 pb-2">
            <a href="#" class="block py-2 text-gray-800 hover:text-blue-600" data-page="home">Home</a>
            <a href="#" class="block py-2 text-gray-800 hover:text-blue-600" data-page="boxes">Boxes</a>
            <a href="#" class="block py-2 text-gray-800 hover:text-blue-600" data-page="notebooks">Notebooks</a>
            <a href="#" class="block py-2 text-gray-800 hover:text-blue-600" data-page="contact">Contact Us</a>
        </div>
    </div>
</nav>
